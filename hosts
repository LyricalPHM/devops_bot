# В полях "..." значения которые требуется заполнить (без кавычек)
# Работа выполнялась на машинах debian - поэтому стоит указывать 15 версию postgresql (команда на вывод логов о репликации в боте - работает только на 15 версии) - она ставится автоматически, если дистрибутив
# иной то стоит выяснить какая версия latest у него. Для машин kali - 16 
all:
  vars:
    postgres_version: "Latest версия устанавливаемого postgresql на Ваш дистрибутив master-server" 
    postgres_version_2: "Latest версия устанавливаемого postgresql на Ваш дистрибутив slave-server"
    postgres_master_host: "Ваш адрес где будет развернут master-server postgresql"
    postgres_master_port: 5432

    RM_HOST: "Ваш адрес где будет развернут master-server postgresql"
    RM_PORT: "порт подключения по SSH"
    RM_USER: "Имя пользователя"
    RM_PASSWORD: "Пароль пользователя"
    TOKEN: 6546423090: "Токен бота telegram"

    DB_USER: "Имя пользователя основной базы данных"
    DB_PASSWORD: "Пароль пользователя основной базы данных"
    DB_HOST: "Ваш адрес основной базы данных"
    DB_DATABASE: "Имя базы данных"

    DB_REPL_USER: "Имя пользователя созданного для репликации"
    DB_REPL_PASSWORD: "Пароль пользователя созданного для репликации"
    DB_REPL_HOST: "Адрес базы для репликации"


  hosts:
    host1:
      ansible_host: "Ваш адрес где будет развернут master-server postgresql"
      ansible_ssh_user: "Имя созданного для ansible пользователя для подключения по SSH"
      ansible_ssh_pass: "Пароль созданного для ansible пользователя для подключения по SSH"
      
    host2:
      ansible_host: "Ваш адрес где будет развернут slave-server postgresql"
      ansible_ssh_user: "Имя созданного для ansible пользователя для подключения по SSH"
      ansible_ssh_pass: "Пароль созданного для ansible пользователя для подключения по SSH"
    
    host3:
      ansible_host: "Ваш адрес где будет развернут telegram бот"
      ansible_ssh_user: "Имя созданного для ansible пользователя для подключения по SSH"
      ansible_ssh_pass: "Пароль созданного для ansible пользователя для подключения по SSH"
      
      


